<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_red_pink"
    tools:context=".Fragment.EditFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND GPS LOCATION \nCONTACT"
            android:textColor="@color/red_pink"
            android:textSize="20dp"
            android:textStyle="bold|italic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="please enter name and phone number to send your location"
            android:textColor="@color/red_pink"
            android:textSize="18dp"
            android:textStyle="italic"/>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/name_ct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:contentPadding="5dp"
        app:layout_constraintBottom_toTopOf="@id/registerbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/head">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/myFilledBoxs_red_pink"
            app:layout_constraintBottom_toTopOf="@id/phonenum_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/head">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:textColor="@color/red_pink"
                android:drawableStart="@drawable/ic_man_vector__22_"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:hint="NAME" />
        </com.google.android.material.textfield.TextInputLayout>

         <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phonenum_layout"
        android:layout_width="match_parent"
        style="@style/myFilledBoxs_red_pink"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/pin_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_layout">

        <AutoCompleteTextView
            android:id="@+id/num"
            android:layout_width="match_parent"
            android:drawableStart="@drawable/ic_phone__1_"
            android:drawablePadding="10dp"
            android:maxLength="10"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@color/red_pink"
            android:singleLine="true"
            android:inputType="number"
            android:hint="PHONE NUMBER" />
    </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/id_add"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_red_pink"
            android:textColor="@color/white"
            android:text="+ Add"
            />
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:contentPadding="5dp"
        app:layout_constraintBottom_toTopOf="@id/registerbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/head">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:text="New Phonenum"/>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        tools:listitem="@layout/cardview_addadapter"
        tools:itemCount="3"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerview_add_num_new"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:contentPadding="5dp"
        app:layout_constraintBottom_toTopOf="@id/registerbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/head">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Existing Phonenum"/>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        tools:listitem="@layout/cardview_addadapter"
        tools:itemCount="3"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerview_add_num"/>
</LinearLayout>